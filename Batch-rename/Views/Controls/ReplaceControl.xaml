<UserControl x:Class="BatchRename.Views.Controls.ReplaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="2" Template="{StaticResource Form}" Tag="Name" Text="Replace"/>
        <TextBox Grid.Row="1" Grid.Column="0" Tag="Old" Template="{StaticResource Form}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Tag="New" Template="{StaticResource Form}"/>
    </Grid>
</UserControl>
