<Window x:Class="Batch_rename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Batch_rename"
        mc:Ignorable="d"
        Title="Batch Rename" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!--List view-->
        <ListView Name="FileView" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name"/>
                    <GridViewColumn Header="Full Path"/>
                    <GridViewColumn Header="New Name"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!--List view helper grid, for sizing listview header-->
        <Grid Grid.Column="1" Visibility="Hidden" SizeChanged="ListView_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FileName" Width="2*"/>
                <ColumnDefinition x:Name="FullPath" Width="6*"/>
                <ColumnDefinition x:Name="NewName" Width="2*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
